<h1>Todos</h1>

{{view 'todos/create' placeholder="What needs to be done?"}}

<div id="stats">
	<button {{action 'clearCompletedTodos'}}>
		Clear Completed Todos
	</button>

  {{remaining}} remaining
</div>

<label>
  {{input type="checkbox" checked=allAreDone disabled=isEmpty}}
  Mark All as Done
</label>

<ul>
{{#each item in model}}
  <li class={{item.isDone}}>
    <label>
      {{input type="checkbox" checked=item.isDone}}
      {{item.title}}<br />
      Due: {{item.dueDate}}

    </label>
  </li>
{{/each}}
</ul>
